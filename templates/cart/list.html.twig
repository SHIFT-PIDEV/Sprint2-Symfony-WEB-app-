{% extends 'page/body.html.twig' %}

{% block minititre %}Panier{% endblock %}
{% block pagetitre %}Panier{% endblock %}

{% block content %}

    <section class="padding-y-50">
        <div class="container">
            <ul class="nav-item nav-item__has-dropdown">
                <a
                        class="nav-link dropdown-toggle"
                        href="#"
                        data-toggle="dropdown">Trier Les prix</a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="{{ path('list-cart') }}" class="nav-link__list">
                            Tout les prix
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('sort') }}" class="nav-link__list">
                            Prix Ascendant
                        </a>
                    </li>
                </ul>
            </ul>
            <div class="row">
                <div class="col-12">
                    <input type="text" id="search" class="form-control col-6" placeholder="Search">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="t" >
                            <thead>
                            <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col">Price</th>
                                <th colspan="3" scope="col" class="text-center">Action</th>
                            </tr>
                            </thead>
                            <tbody id="all">
                            {% if nom == null %}
                                <td class="p-4" colspan="4">
                                    <span class="text-center"> Your Cart is empty</span>
                                </td>
                            {% endif %}
                            {% for i in nom %}
                                <tr>
                                    <td class="p-4">
											<span class="d-inline-block width-7rem border p-3 mr-3">
												<img src="{{ asset('front/assets/img/shop/products/1.jpg') }}" alt="" />
											</span>
                                        <a href="#">{{ i.nom }}</a>
                                    </td>
                                    <td class="p-4">
                                        {{ i.prix }}
                                    </td>
                                    <td class="text-center" colspan="3">
                                        <a  href="{{ path('delete-cart',{'id':i.id}) }}"
                                            data-fancybox=""
                                            data-src="#trueModal"
                                            data-modal="true"
                                            href="javascript:;"
                                            data-toggle="tooltip" data-placement="bottom" data-original-title="Supprimer item"><i class="ti-close"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            {#  <tr>
                                 <td colspan="3" class="p-4">
                                    <form class="form-inline">
                                        <input
                                                type="text"
                                                class="form-control"
                                                placeholder="Promocode"
                                                required
                                        />
                                        <a type="submit" class="btn btn-primary ml-2">
                                            Submit
                                        </a>
                                    </form>
                                </td>
                                <td colspan="3">
                                    Total:
                                    <span class="font-weight-semiBold font-size-18"
                                    ></span
                                    >
                                </td>
                            </tr>#}
                            </tbody>
                            <tbody id="search">
                            </tbody>
                        </table>
                        <div class="navigation">
                            {{ knp_pagination_render(nom) }}
                        </div>
                    </div>
                </div>
                <!-- END col-12 -->

                <div class="col-md-6 mt-4">
                    <a href="{{ path('add-cart') }}" class="btn btn-outline-primary mx-1">
                        <i class="ti-angle-double-left mr-2"></i> Back to shopping</a
                    >
                </div>
                <!-- END col-md-6 -->
                <div class="col-md-6 mt-4 text-right">
                    <a href="{{ path('add_pm') }}" class="btn btn-primary mx-1 ">
                        Checkout
                    </a>
                </div>
                <!-- END col-md-6 -->
            </div>
            <!-- END row-->
        </div>
        <!-- END container-->

    </section>

    <!-- Confirmation popup -->
    <div id="trueModal" class="p-5" style="display: none; max-width: 600px">
        <h2>I'm a modal!</h2>
        <p>You can close me only by pressing custom button below.</p>
        <p>
            It would also be possible to prevent closing using
            <code>beforeClose</code> callback.
        </p>
        <p>
            <button data-fancybox-close class="btn btn-primary">Close me</button>
        </p>
    </div>
    <!-- End Confirmation popup -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">
</script>
<script>
    $( document ).ready(function() {
        $("#search").keyup(function(e){
            var value = $(this).val();
            $.ajax({
                url : "{{ path('search-cart') }}",
                type : 'GET',
                data: {
                    'searchValue' : value
                },
                success : function(retour){
                    if(retour){
                        $('#t tbody#search').empty();
                        $.each(JSON.parse(retour), function(i, obj) {
                            $('#t tbody#all').hide();
                            $('#t tbody#search').append('<tr><td> '+obj.id+'  </td><td>    '+obj.nom+'  </td><td>'+obj.prix+' </td></tr>');
                        });
                    }
                    else
                    {
                        $('#t tbody#all').show();
                        $('#t tbody#search').empty();
                        $('#t tbody#search').fadeIn('fast');
                    }
                },
            });
            return false;
        });
    });
</script>

{% endblock %}

