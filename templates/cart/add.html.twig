{% extends 'page/body.html.twig' %}
{% block pagepath %}

{% endblock %}
{% block pagetitre %}
    <h2>Cart</h2>
{% endblock %}
{% block content %}

    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
    <div class="container">
        <div class="form-group">


            {{ form_label(form.nom,"Nom:") }}

            {{ form_widget(form.nom, {attr: {class:'form-control','id':'nom'}}) }}
            <div style="color: red;">
                {{ form_errors(form.nom)}}
            </div>
        </div>
        <div class="form-group" >


            {{ form_label(form.prix,"Prix:" ) }}

            {{ form_widget(form.prix,{attr: {class:'form-control','id':'prix'}}) }}
            <div style="color: #ff0000;">
                {{ form_errors(form.prix)}}
            </div>

        </div>


    </div>
    <div class="card-footer">
        <button  type="submit" href="{{ path('add-cart') }}" class="btn btn-primary">Ajouter au panier</button>
    </div>
    {{ form_end(form) }}
{% endblock  %}

