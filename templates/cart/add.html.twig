{% extends 'Front_navbar_footer.html.twig' %}

{% block pagepath %}

{% endblock %}
{% block title %} <div

        class="padding-y-60 bg-cover"
        data-dark-overlay="6"
        style="background: url({{ asset('frontoffice/assets/img/passageex.png')}}) no-repeat"
>
    <div class="container">
        <h1 class="text-white">Panier :</h1>
        <ol
                class="breadcrumb breadcrumb-double-angle text-white bg-transparent p-0"
        >
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Panier</a></li>
            <li class="breadcrumb-item">Panier</li>
        </ol>
    </div>
</div>
{% endblock %}
{% block body %}

    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
    <div class="container">
        <div class="form-group">


            {{ form_label(form.nom,"Nom:") }}

            {{ form_widget(form.nom, {attr: {class:'form-control','id':'nom'}}) }}
            <div style="color: red;">
                {{ form_errors(form.nom)}}
            </div>
        </div>
        <div class="form-group" >


            {{ form_label(form.prix,"Prix:" ) }}

            {{ form_widget(form.prix,{attr: {class:'form-control','id':'prix'}}) }}
            <div style="color: #ff0000;">
                {{ form_errors(form.prix)}}
            </div>

        </div>


    </div>
    <div class="card-footer">
        <button  type="submit" href="{{ path('add-cart') }}" class="btn btn-primary">Ajouter au panier</button>
    </div>
    {{ form_end(form) }}
{% endblock  %}

