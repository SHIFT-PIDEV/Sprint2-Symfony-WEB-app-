

{% block content %}

    {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
    <div class="container">
        <div class="form-group">
            {{ form_row(form.objet, {"attr" : {'class':'form-control'},"label":"Objet de la demande"})}}

            {{ form_widget(form.objet, {attr: {class:'form-control','id':'objet'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.description, {"attr" : {'class':'form-control'},"label":"Description de la de demande"})}}


            {{ form_widget(form.description, {attr: {class:'form-control','id':'description'}}) }}
        </div>

        <div>
            {{ form_label(form.cv) }}
            {{ form_widget(form.cv, {'attr': {'class': 'form-control form-control-lg','placeholder':'image path'}}) }}
        </div>
    </div>




    <div class="card-footer">
        <button  type="submit"  class="btn btn-primary" >{{ button_label|default('Ajouter Demande') }}</button>
    </div>
    {{ form_end(form) }}



{% endblock  %}

