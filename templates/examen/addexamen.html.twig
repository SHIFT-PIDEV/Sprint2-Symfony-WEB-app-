{% extends 'dashboard.html.twig' %}
{% block content %}

    {{ form_start(form,{attr:{'id':'form_examen'}}) }}
    <div class="container">
        <div class="form-group">
            {{ form_label(form.titre,"Titre :") }}

            {{ form_widget(form.titre, {attr: {class:'form-control','id':'titre'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.date,"Date :" ) }}

            {{ form_widget(form.date) }}
        </div>
        <div class="form-group">
            {{ form_label(form.niveau,"Niveau :" ) }}

            {{ form_widget(form.niveau,{attr: {class:'form-control','id':'reponsec'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.prix,"Prix  :" ) }}

            {{ form_widget(form.prix,{attr: {class:'form-control','id':'reponsec'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.q,"Question numero 1:" ) }}

            {{ form_widget(form.q,{attr: {class:'form-control','id':'reponsec'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.qq,"Question numero 2:" ) }}

            {{ form_widget(form.qq,{attr: {class:'form-control','id':'reponsec'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.qqq,"Question numero 3:" ) }}

            {{ form_widget(form.qqq,{attr: {class:'form-control','id':'reponsec'}}) }}
        </div>
    </div>
    <div class="card-footer">
        <button  type="submit" href="{{ path('add_examen') }}" class="btn btn-primary">Ajouter Examen</button>
    </div>




    {{ form_end(form) }}



{% endblock  %}
