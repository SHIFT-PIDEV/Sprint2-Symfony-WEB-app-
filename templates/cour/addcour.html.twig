{% extends 'DashbordBack.html.twig' %}


{% block content %}

    {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
    <div class="container">
        <div class="form-group">
            {{ form_label(form.nom,"Nom :") }}


            {{ form_widget(form.nom, {attr: {class:'form-control','id':'nom'}}) }}
