{% extends 'page/body.html.twig' %}
{% block minititre %}Reviews{% endblock %}
{% block pagetitre %}<h2>Reviews</h2>{% endblock %}
{% block content %}
    <link rel="stylesheet" href="">

    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
    <div class="container">
        <div class="form-group col-6">


            {{ form_label(form.commentaire,"Commentaire:") }}

            {{ form_widget(form.commentaire, {attr: {class:'form-control','id':'commentaire'}}) }}
            <div style="color: red;">
                {{ form_errors(form.commentaire)}}
            </div>
        </div>
        <div class="form-group col-6" >


            {{ form_label(form.rate,"Rate:" ) }}

            {{ form_widget(form.rate,{attr: {class:'form-control','id':'rate'}}) }}
            <div style="color: #ff0000;">
                {{ form_errors(form.rate)}}
            </div>

        </div>

        <div align="center" style="background: #000; padding: 50px">
        </div>

        </div>


    </div>
    <div class="card-footer">
        <button  type="submit" href="{{ path('add_rating') }}" class="btn btn-primary">Ajouter un avis</button>
    </div>
    {{ form_end(form) }}
{% endblock  %}