{% extends 'dashboard.html.twig' %}

{% block title %}{% endblock %}

{% block content %}

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Liste des avis:</h3>
        </div>
        <div class="card-body p-0">
            <form class="w-search">
                <div class="sidebar-search">

                    <div class="input-group custom-search-form">

                        <input type="text" id="search" class="form-control pl-3" placeholder="Search here">
                    </div>
                    <!-- /input-group -->
                </div>
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="#"><span class="fa arrow"></span></a>
                        <ul style="background-color: #0b0b0b" class="nav " id="entitiesNav">
                        </ul>
                    </li>
                </ul>



            </form>
            <br>
            <br>
            <br>
            <table id="rating" class="table table-striped">
                <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Commentaire</th>
                    <th>Rate</th>
                    <th>Action</th>

                </tr>
                </thead>
                <tbody>
                {% for i in commentaire %}
                    <tr>
                        <td>{{ i.idR }}</td>
                        <td>{{ i.commentaire }}</td>
                        <td>{{ i.rate }}</td>

                        <td>
                            <a class="btn btn-block btn-success" href=" {{ path('edit_rating',{'id':i.idR}) }} " > modifier</a>
                        </td>
                        <td>
                            <a class="btn btn-block btn-danger"  href="{{ path('delete_rating',{'id':i.idR}) }} " onclick="confirm('Voulez vous vraiment supprimer cet element?');" >supprimer </a>
                        </td>

                        </td>
                    </tr>


                {% endfor %}
                </tbody>

            </table>
        </div>



    </div>
{% endblock content %}
