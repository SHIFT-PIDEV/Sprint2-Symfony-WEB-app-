{% extends 'front/baseFront.html.twig' %}
{% block bar%}
    <div
            class="padding-y-60 bg-cover"
            data-dark-overlay="6"
            style="background: url({{ asset('theme/img/cropper/1.jpg') }}) no-repeat"
    >
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 my-2 text-white">
                    <ol class="breadcrumb breadcrumb-double-angle bg-transparent p-0">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('upgradi') }}">Events</a></li>
                    </ol>
                    <h2 class="h1">All Events</h2>
                    {#set i=0  #}
                    {#for e in events #}
                    {# if e.getDateDebut<=date('now') #}
                    {# set i=i+1 #}
                    {#endif  #}
                    {# endfor#}
                    <p>{{ events|length}} Events found</p>
                </div>
                <form class="col-lg-5 my-2 ml-auto" method="post" action="{{ path('afterSearch1') }}">
                    <div class="input-group bg-white rounded p-1">
                        <input
                                type="text"
                                class="form-control border-white"
                                placeholder="Search your fav event"
                                required=""
                                name="search1"
                        />
                        <div class="input-group-append">
                            <button class="btn btn-info rounded" type="submit">
                                Search
                                <i class="ti-angle-right small"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
{% block createHere %}
    <!-- -->
    <section class="py-3 position-relative shadow-v1">
        <div class="container">
            <form class="row">
                <div class="col-md-6 my-2">
                    <a href="{{ path('eventsTrier')}}">sort Events by date</a>
                </div>
                <div class="col-md-6 my-2 text-md-right">
                    <div class="d-inline-flex justify-md-content-end">
                        <!--hereeeeeeee-->
                        <div class="media-body ml-3">
                        <button class="btn btn-primary shadow-primary mr-3 mb-3">
                            {% if app.user %}
                            <a href="{{ path('myEvents',{'idclient':app.user.id})}}">My Events</a>
                                {% else %}
                                    <a href="{{ path('app_login')}}">My Events</a>
                            {% endif %}
                        </button>
                        </div>
                    </div>
                </div>
            </form>
            <!-- END row-->
        </div>
        <!-- END container-->
    </section>
    <!-- -->

        <section class="padding-y-60 bg-light">
        <div class="container">
            <!-- ********************************-->
            <aside class="col-lg-3 order-2 order-lg-1">
                <div class="card shadow-v2 marginTop-30">
                    <h4 class="card-header bg-primary text-white mb-0">
                        Filter
                    </h4>
                    <ul class="card-body list-unstyled mb-0">
                        <li class="mb-2"><a href="{{ path('upgradi')}}">All Events</a></li>
                        <li class="mb-2"><a href="{{ path('availableEvents')}}">available Events</a></li>
                        <li class="mb-2"><a href="{{ path('unvailableEvents')}}">unavailable Events</a></li>
                    </ul>
                </div>

            </aside>

            <!-- ********************************-->
        <div class="row">
    {% if events %}
    {% for e in events %}
        <div class="col-lg-4 col-md-6 marginTop-30">
            <div class="card height-100p shadow-v1">
                <img class="card-img-top" src="{{ '/uploads/'~e.getPic }}" alt="" />
                <div class="card-body">
                    <a href="#" class="h4">
                        {{ e.getNomevent }}
                    </a>
                    <ul class="list-unstyled line-height-lg mt-4">
                        <li>
                            <i class="ti-time text-primary mr-2"></i>{{ e.getDatedebut|date('d/m/Y') }}  Time:{{ e.getHeure }}h
                        </li>
                        <li>
                            <i class="ti-location-pin text-primary mr-2"></i>En ligne
                        </li>
                    </ul>
                    {% if app.user %}
                    <a href="{{ path('eventDetails',{'idEvent':e.getIdevent,'idClient':app.user.id}) }}" class="btn btn-link pl-0"
                    >View Details</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-link pl-0"
                            >View Details</a>
                    {% endif %}
                </div>
            </div>
        </div>
{% endfor %}
    {% else %}
        <h1>pas d'Events</h1>
    {% endif %}
        </div>
        </div>
        </section>


{% endblock %}