{% block body %}
    <div class="single-pro-review-area mt-t-30 mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-payment-inner-st">
                        <ul id="myTabedu1" class="tab-review-design">
                            <li class="active"><a href="#description">Event Details</a></li>
                        </ul>
                        <!-- ********************************************-->

                        <div id="myTabContent" class="tab-content custom-product-edit">
                            <div class="product-tab-list tab-pane fade active in" id="description">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="review-content-section">
                                            <div id="dropzone1" class="pro-ad addcoursepro">



                                               <!-- <form action="/upload" class="dropzone dropzone-custom needsclick addcourse" id="demo1-upload">-->
                                                    {{form_start(form,{'attr':{'class':'dropzone dropzone-custom needsclick addcourse'}})}}
                                                    <div class="row">
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                            <div class="form-group">
                                                                {{ form_errors(form.idformateur,{'atte':{'class':'invalid'}})   }}
                                                                <!--<input name="coursename" type="text" class="form-control" placeholder="id formateur">-->
                                                                {{ form_widget(form.idformateur,{'attr': {'class': 'form-control','placeholder':'Id Formateur'}}) }}
                                                            </div>


                                                            <div class="date-picker-inner">
                                                                <div class="form-group data-custon-pick" id="data_1">
                                                                    {{ form_errors(form.datedebut,{'attr': {'class': 'login2 pull-right pull-right-pro'}}) }}
                                                            <div class="input-group date">
                                                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                                <!--<input type="text" class="form-control" value="10/04/2017">-->
                                                                {{ form_widget(form.datedebut, {'attr': {'class': 'form-control'}}) }}
                                                            </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                    {{ form_errors(form.nomevent,{'attr':{'class':'login2 pull-right pull-right-pro'}}) }}
                                                               <!-- <input name="duration" type="text" class="form-control" placeholder="Nom de l'Event">-->
                                                                {{ form_widget(form.nomevent, {'attr': {'class': 'form-control','placeholder':'Event Name'}}) }}
                                                            </div>
                                                            <div class="form-group">
                                                                    {{ form_errors(form.heure) }}
                                                                <!--<input name="price" type="number" class="form-control" placeholder="heure">-->
                                                                {{ form_widget(form.heure, {'attr': {'class': 'form-control','placeholder':'Heure Debut'}}) }}
                                                            </div>

                                                            <div class="form-group res-mg-t-15">
                                                                {{ form_errors(form.duree) }}
                                                                <!-- <input name="department" type="text" class="form-control" placeholder="duree">-->
                                                                {{ form_widget(form.duree, {'attr': {'class': 'form-control','placeholder':'Duration'}}) }}
                                                            </div>


                                                        </div>
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                            <div>
                                                                {{ form_errors(form.image) }}
                                                               <!-- <input class="form-control form-control-lg" id="formFileLg" type="file" />-->
                                                                {{ form_widget(form.image, {'attr': {'class': 'form-control form-control-lg','placeholder':'image path'}}) }}
                                                            </div>
                                                            <div class="form-group">
                                                                {{ form_errors(form.descevent,{'attr': {'style': 'color:red'}}) }}
                                                                <!--<textarea name="description" placeholder="Description"></textarea>-->
                                                                {{ form_widget(form.descevent, {'attr': {'class': 'form-control','placeholder':'Description...'}}) }}
                                                            </div>

                                                        </div>
                                                    </div>

                                                <center style="padding-right: 30px;padding-left: 30px">
                                                    {% for message in app.flashes('notsuccess') %}
                                                        <div class="alert alert-warning">
                                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                            <strong>Warning!</strong> {{ message }}
                                                        </div>
                                                    {% endfor %}
                                                </center>

                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="payment-adress">
                                                                <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                {{ form_end(form) }}



                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                        <!-- ********************************************-->
                </div>
            </div>
        </div>
    </div>
{% endblock %}