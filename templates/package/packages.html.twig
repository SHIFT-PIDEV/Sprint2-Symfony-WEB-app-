{% extends 'DashbordBack.html.twig' %}
{% block titre %}Gestion des Packages {% endblock %}
{% block miniTitre %}Gestion des Packages {% endblock  %}

{% block title %}{% endblock %}

{% block content %}

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">LISTE DES PACKAGES :</h3>
        </div>
        <div class="card-body p-0">
            <form class="w-search">
                <div class="sidebar-search">

                    <div class="input-group custom-search-form">

                        <input type="text" id="search" class="form-control pl-3" placeholder="Search here">
                    </div>
                    <!-- /input-group -->
                </div>
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="#"><span class="fa arrow"></span></a>
                        <ul style="background-color: #0b0b0b" class="nav " id="entitiesNav">
                        </ul>
                    </li>
                </ul>



            </form>
            <br>
            <br>
            <br>
            <table id="chauffeur" class="table table-striped">
                <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>NOM PACKAGE</th>
                    <th>PRIX</th>
                    <th>DUREE</th>
                    <th>DESCRITION</th>
                    <th>NBRCOURS</th>
                    <th>CATEGORIE</th>
                    <th>COUR 1</th>
                    <th>COUR 2</th>
                    <th>COUR 3</th>
                    <th>IMAGE</th>
                    <th>Action</th>

                </tr>
                </thead>
                <tbody>
                {% for e in package %}

                    <tr>
                        <td>{{ e.idpackage}}</td>
                        <td>{{ e.nompackage }}</td>
                        <td>{{ e.prix }}</td>
                        <td>{{ e.duree }} </td>
                        <td>{{ e.description }}</td>

                        <td>{{ e.nbrcours }}</td>
                        <td>{{ e.idca.nomCat }}</td>
                        <td>{{ e.courp.nom }}</td>
                        <td>{{ e.courpp.nom }}</td>
                        <td>{{ e.courppp.nom }}</td>
                        <td>{{ e.image }}</td>

                        <td>
                            <a class="btn btn-block btn-success" href="{{ path('edit_package',{'idPackage':e.idpackage}) }}" > modifier</a>
                        </td>
                        <td>
                            <a class="btn btn-block btn-danger"  href="{{ path('delete_package',{'idPackage':e.idpackage}) }}" >supprimer </a>
                        </td>

                        </td>
                    </tr>


                {% endfor %}
                </tbody>

            </table>
            <div class="navigation">
                {{ knp_pagination_render(package) }}
            </div>

        </div>




    </div>

{% endblock content %}
