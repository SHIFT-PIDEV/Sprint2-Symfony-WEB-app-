{% block body %}


    <section class="padding-y-60 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mt-4">
                    <div class="card shadow-v1">
                        <div class="position-relative">
                            <img
                                    class="card-img-top w-100"
                                    src="{{ asset('frontoffice/assets/img/passageex2.jpg')}}"
                                    alt=""
                            />

                            <div class="position-absolute bottom-0 width-100p bg-primary-0_7 text-center text-white">
                                <h1>chronometre lenna</h1>
                            </div>
                        </div>
                        <div class="card-body padding-40">
                            <h2 class="card-title">{{ inscripexam.idexam.titre }}</h2>
                            <h6 class="card-title">Examen à niveau :{{ inscripexam.idexam.niveau }}</h6>
                            <h6 class="card-title">avec un prix :{{ inscripexam.idexam.prix }}DT</h6>

                            <ul
                                    class="nav tab-line tab-line border-bottom my-4 text-gray"
                                    role="tablist"
                            >
                                <li class="nav-item">
                                    <a
                                            class="nav-link active show"
                                            data-toggle="tab"
                                            href="#Tabs_1-1"
                                            role="tab"
                                            aria-selected="true"
                                    >
                                        Les Questions
                                    </a>
                                </li>
                            </ul>

                            <div class="tab-content">
                                <div
                                        class="tab-pane fade active show"
                                        id="Tabs_1-1"
                                        role="tabpanel"
                                >

                                    {% block javascript_calcule_note %}
                                    <script>
                                        function verif_exam()
                                        {
                                            var result =0;
                                            var res =0
                                            $('#button').click(function() {
                                                if(($('#q1c1').is(':checked'))&&($('#q2c1').is(':checked'))&&($('#q3c1').is(':checked'))) {
                                                    result=100;
                                                    res = Math.round(result * 100) / 100;
                                                   // swal("BRAVOO !", "3 Réponses corrects , Niveau Expert !! votre note est "+res+"/100", "success");
                                                    swal({
                                                        title: "BRAVOO !",
                                                        text: "3 Réponses corrects , Niveau Expert ! vous etes un genie ! votre note est "+res+"/100",
                                                        icon: "success",

                                                    })
                                                        .then((willDelete) => {
                                                            if (willDelete) {
                                                                swal("bye bye", {
                                                                    icon: "success",
                                                                });
                                                                $(location).attr('href','http://127.0.0.1:8000/examen/listexamenF')
                                                            } else {
                                                                swal("Veuillez-verifier vos champs");
                                                            }
                                                        });
                                                    return result;
                                                }
                                                else if((($('#q1c1').is(':checked'))&&($('#q2c1').is(':checked')))||((($('#q2c1').is(':checked'))&&($('#q3c1').is(':checked'))))||(($('#q1c1').is(':checked'))&&($('#q3c1').is(':checked')))){
                                                    result=(100/3)*2;
                                                    res = Math.round(result * 100) / 100;
                                                   // swal("BRAVOO !", "2 Réponses corrects , Niveau Moyen !! votre note est "+res+"/100", "success");
                                                    swal({
                                                        title: "BIEN !",
                                                        text: "2 Réponses corrects , Niveau Moyen ! tu peut mieux faire! votre note est "+res+"/100",
                                                        icon: "warning",

                                                    })
                                                        .then((willDelete) => {
                                                            if (willDelete) {
                                                                swal("bye bye", {
                                                                    icon: "success",
                                                                });
                                                                $(location).attr('href','http://127.0.0.1:8000/examen/listexamenF')
                                                            } else {
                                                                swal("Veuillez-verifier vos champs");
                                                            }
                                                        });

                                                    return result;

                                                }
                                                if(($('#q3c1').is(':checked'))||($('#q1c1').is(':checked'))||($('#q2c1').is(':checked'))){
                                                    result=100/3;
                                                    res = Math.round(result * 100) / 100;
                                                   // swal("BRAVOO !", "1 Réponse correct , Niveau Faible !! votre note est "+res+"/100", "error");
                                                    swal({
                                                        title: "OOOPESS !",
                                                        text: "1 Réponse correct , Niveau Faible !! votre note est "+res+"/100",
                                                        icon: "error",
                                                        buttons: true,
                                                        dangerMode: true,
                                                    })
                                                        .then((willDelete) => {
                                                            if (willDelete) {
                                                                swal("bye bye", {
                                                                    icon: "success",
                                                                });
                                                                $(location).attr('href','http://127.0.0.1:8000/examen/listexamenF')
                                                            } else {
                                                                swal("Veuillez-verifier vos champs");
                                                            }
                                                        });

                                                   // return result;


                                                }
                                            });
                                        }

                                    </script>
                                    {% endblock  %}

                                    <form name="myform" method="get" >
                                        <br>
                                    <h4 class="mb-3">Question 1 :</h4>
                                    <p>
                                        {{ inscripexam.idexam.q.question }}
                                    </p>
                                    <div>
                                        <input type="radio" name="radioQ" id="q1c1" value="R1correct"> {{ inscripexam.idexam.q.reponsec }}

                                    </div>
                                    <div>
                                        {% for e in r1 %}
                                        <input type="radio" name="radioQ"  id="q1c2"  value="R1fausse"> {{ e.reponse}}
                                        {% endfor %}
                                    </div>
                                        <br>
                                    <h4 class="mb-3">Question 2 :</h4>
                                    <p>
                                        {{ inscripexam.idexam.qq.question }}
                                    </p>
                                    <div>
                                        <input type="radio" name="radioQQ" id="q2c1" value="R2correct"> {{ inscripexam.idexam.qq.reponsec}}

                                    </div>
                                    <div>
                                        {% for e in r2 %}
                                        <input type="radio" name="radioQQ" id="q2c2"  value="R2fausse"> {{ e.reponse}}
                                        {% endfor %}
                                    </div>
                                        <br>
                                    <h4 class="mb-3">Question 3 :</h4>
                                    <p>
                                        {{ inscripexam.idexam.qqq.question }}
                                    </p>
                                    <div>
                                        <input type="radio" name="radioQQQ" id="q3c1" value="R3correct"> {{ inscripexam.idexam.qqq.reponsec}}

                                    </div>
                                    <div>
                                        {% for e in r3 %}
                                        <input type="radio" name="radioQQQ" id="q3c2" value="R3fausse"> {{ e.reponse}}
                                        {% endfor %}
                                    </div>

                                        <div>
                                            <br>
                                            <br>
                                            <input type="button" class="btn btn-block btn-outline-pinterest" onclick="verif_exam()" id="button" value="valider">
                                            <br>
                                            <br>
                                        </div>
                                    </form>


                                    <!-- END row-->
                                    <ul
                                            class="list-inline d-inline-block py-3 px-4 shadow-v3 bg-white rounded-pill"
                                    >
                                        <li class="list-inline-item">
                                            Partager
